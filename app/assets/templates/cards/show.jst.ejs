<div class="cardDetail">
  <span class="cardProp" data-id="title">
    <h3><%= card.escape('title') %></h3>
  </span>
    <ul>
    <span class="cardProp" data-id="description">
      <li>
      <%= card.escape('description') || "No description" %>
      </li>
    </span>
    <span data-id="todo_items">
      <li>
        Todo Items
        <ul class="todo_list">
          <% todoItems.each(function (item) { %>
            <li>
              <label for="item_<%= item.id %>">
              
                <%= item.escape('title') %>
              
                <input
                  id="item_<%= item.id %>"
                  type="checkbox"
                  data-id="<%= item.id %>"
                  <% if (item.get('done')) { %>
                    checked
                  <% } %>
                >
              
              </label>
              <button class="deleteTodo btn" data-id="<%= item.id %>">X</button>
            </li>
          <% }) %>
          <li>
            <button class="newTodo btn">New Todo</button>
          </li>
        </ul>
      </li>
    </span>
    <span data-id="users">
      <li>
        Assigned Users
        <ul class="user_list">
          <% users.each(function (user) { %>
            <li>
              <%= user.get('email') %>
              <button class="removeUser btn" data-id="<%= user.id %>">X</button>
            </li>
          <% }) %>
          <li>
            <button class="newUser btn">Assign a User</button>
          </li>
        </ul>
      </li>
    </span>
    </ul>
    <br>
